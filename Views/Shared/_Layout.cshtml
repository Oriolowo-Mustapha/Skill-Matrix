<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillMatrix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap">
    <link rel="stylesheet" href="~/css/Stylesite.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Skill_Matrix.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SkillMatrix</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#services">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#stats">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                    </ul>
                    <div class="dashboard-area">
                        <a class="dashboard-link" asp-area="" asp-controller="User" asp-action="Dashboard">
                            <span class="dashboard-icon">⚡</span>
                            <span class="dashboard-text">Dashboard</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5 class="footer-title">SkillMatrix</h5>
                        <p class="footer-description">Empowering professionals with cutting-edge skill development and career advancement tools.</p>
                        <div class="footer-social">
                            <a href="#" class="social-link">💼</a>
                            <a href="#" class="social-link">🐦</a>
                            <a href="#" class="social-link">📧</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 mb-4">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">Platform</h6>
                        <ul class="footer-links">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Skills</a></li>
                            <li><a href="#">Analytics</a></li>
                            <li><a href="#">Reports</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 mb-4">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">Company</h6>
                        <ul class="footer-links">
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Careers</a></li>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Press</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6 mb-4">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">Support</h6>
                        <ul class="footer-links">
                            <li><a href="#">Help Center</a></li>
                            <li><a href="#">Contact</a></li>
                            <li><a href="#">Community</a></li>
                            <li><a href="#">Status</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6 mb-4">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">Legal</h6>
                        <ul class="footer-links">
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                            <li><a href="#">Terms</a></li>
                            <li><a href="#">Cookies</a></li>
                            <li><a href="#">GDPR</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <hr class="footer-divider">
            <div class="row">
                <div class="col-md-6">
                    <p class="footer-copyright">&copy; 2025 SkillMatrix. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="footer-tagline">Professional Development Platform</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>