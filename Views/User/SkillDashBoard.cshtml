@model List<Skill_Matrix.ViewModel.SkillViewModel>

@{
    ViewData["Title"] = "My Skills";
    Layout = "_DashboardLayout";
}

@section Styles{
    <link href="~/css/SkillDashBoard.css" rel="stylesheet"/>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 id="myskills" class="mb-0">My Skills</h2>
                <a asp-controller="Skill" asp-action="GetAllSkills">
                    <button type="button" class="btn btn-primary" >
                    <i class="fas fa-plus me-2"></i>Add New Skill
                </button></a>
                
            </div>
            <div id="sortBy" class="row mb-6">
                <div class="col-md-6 col-lg-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-filter me-2 text-muted"></i>
                        <label for="sortBy" class="form-label me-2 mb-0">Sort By:</label>
                        <select class="form-select" id="sortBy">
                            <option value="name">Name</option>
                            <option value="proficiency">Proficiency Level</option>
                            <option value="score">Latest Score</option>
                            <option value="assessed">Last Assessed</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="table-container">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Skill Name</th>
                                        <th scope="col">Proficiency Level</th>
                                        <th scope="col">Latest Score (%)</th>
                                        <th scope="col">Last Assessed</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var skill in Model)
                                        {
                                            <tr>
                                                <td>@skill.Name</td>
                                                <td>@skill.ProficiencyLevel</td>
                                                <td>
                                                    <span class="badge bg-primary fw-bold">
                                                        @skill.LatestScore.ToString("F1")%
                                                    </span>
                                                </td>
                                                <td>@skill.LastAssessed.ToString("MMM dd, yyyy")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-4">
                                                No skills found. Add your first skill to get started!
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>