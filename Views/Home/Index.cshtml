@{
    ViewData["Title"] = "Home Page";

}

<link rel="stylesheet" href="~/css/Style.css" />

<section class="hero">
    <div class="container hero-container">
        <div class="hero-content">
            <h1>Skill Development Made Simple & Effective</h1>
            <p>
                Experience the future of professional development with our comprehensive skill matrix platform.
                Track, develop, and showcase your abilities with confidence and precision.
            </p>
            <div class="hero-buttons">
                @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                {
                    <a asp-controller="Skill" asp-action="GetAllSkills" class="btn-hero-primary">➕ Add Skills</a>
                    <a asp-controller="User" asp-action="Dashboard" class="btn-hero-secondary">📊 Go to Dashboard</a>
                }
                else
                {
                    <a asp-controller="User" asp-action="Register" class="btn-hero-primary">📝 Sign Up</a>
                    <a asp-controller="User" asp-action="Login" class="btn-hero-secondary">🔐 Login</a>
                }
            </div>
        </div>
        <div class="hero-visual">
            <div class="skill-icon">
                🎯
            </div>
        </div>
    </div>
</section>

<section class="services" id="services">
    <div class="container">
        <div class="services-header">
            <h2>Our Skill Development Services</h2>
            <p>Comprehensive solutions for all your professional development needs</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon technical">💻</div>
                    <h3>Technical Skills</h3>
                    <p>Master cutting-edge technologies and programming languages with our structured learning paths.</p>
                    <ul class="service-features">
                        <li>Programming languages certification</li>
                        <li>Cloud platform expertise</li>
                        <li>DevOps and automation tools</li>
                        <li>Mobile development access</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon soft">🤝</div>
                    <h3>Soft Skills</h3>
                    <p>Develop essential interpersonal and communication skills for career advancement.</p>
                    <ul class="service-features">
                        <li>Communication workshops</li>
                        <li>Team collaboration training</li>
                        <li>Presentation skills</li>
                        <li>Emotional intelligence</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon leadership">👑</div>
                    <h3>Leadership Training</h3>
                    <p>Build leadership capabilities and management skills for tomorrow's challenges.</p>
                    <ul class="service-features">
                        <li>Strategic thinking development</li>
                        <li>Team management skills</li>
                        <li>Decision-making frameworks</li>
                        <li>Conflict resolution</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon assessment">📋</div>
                    <h3>Skill Assessment</h3>
                    <p>Comprehensive evaluation tools to identify strengths and areas for improvement.</p>
                    <ul class="service-features">
                        <li>360-degree feedback</li>
                        <li>Competency mapping</li>
                        <li>Performance analytics</li>
                        <li>Progress tracking</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon learning">📚</div>
                    <h3>Learning Paths</h3>
                    <p>Personalized learning journeys tailored to your career goals and aspirations.</p>
                    <ul class="service-features">
                        <li>Customized curricula</li>
                        <li>Interactive modules</li>
                        <li>Hands-on projects</li>
                        <li>Mentorship programs</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon analytics">📊</div>
                    <h3>Analytics & Reporting</h3>
                    <p>Data-driven insights to optimize your skill development and career growth.</p>
                    <ul class="service-features">
                        <li>Skill gap analysis</li>
                        <li>Performance dashboards</li>
                        <li>Trend identification</li>
                        <li>ROI measurement</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="stats">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon users">👥</div>
                    <div class="stat-number">50K+</div>
                    <div class="stat-label">Active Learners</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon accuracy">🎯</div>
                    <div class="stat-number">95%</div>
                    <div class="stat-label">Assessment Accuracy</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon support">⏰</div>
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Learning Support</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon growth">🌍</div>
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Skills Covered</div>
                </div>
            </div>
        </div>
    </div>
</section>